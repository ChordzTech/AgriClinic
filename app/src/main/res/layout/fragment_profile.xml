<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".loginActivities.fragments.ProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="32dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/green"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="11dp"
            android:id="@+id/llRow"
            android:padding="11dp">

            <ImageView
                android:id="@+id/imgContact"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/white"
                android:contentDescription="Account Image"
                android:src="@drawable/profile1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtName"
                    android:text="Your Account"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Describe yourself to others"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/signIn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:padding="0dp"
                    android:text="Edit" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/llRow2"
            android:padding="11dp">

            <ImageView
                android:id="@+id/share"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/white"
                android:contentDescription="Share Image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtShare"
                    android:text="Grow smart together!"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtshare1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share Agro Clinic and help farmars solve their problems."
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txtshare2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:layout_marginLeft="150sp"
                    android:text="Share App"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/llRow3"
            android:padding="11dp">

            <ImageView
                android:id="@+id/feedback"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/white"
                android:contentDescription="Feedback Image"
                android:src="@drawable/feedback"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtFeedback"
                    android:text="How is your experience with Agro Clinic App?"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtfeedback2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We'd love to hear your thoughts and suggestions."
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txtfeedback3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:layout_marginLeft="150sp"
                    android:text="Give Feedback"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSubscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/llRow4"
            android:padding="11dp">

            <ImageView
                android:id="@+id/subscribe"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/white"
                android:contentDescription="Subscription Image"
                android:src="@drawable/subscription"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSubscribe"
                    android:text="Subscription"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtsubscribe2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Date -"
                    android:inputType="date"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txtsubscribe3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="End Date -"
                    android:inputType="date"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txtsubscribe4"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100sp"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:text="Expired"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

